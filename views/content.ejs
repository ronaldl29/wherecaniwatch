<%- include('partials/header'); %>
    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        </div>
        <div class="row">
            <div class="col-md-4">
                <div style="width: 21rem;">
                    <img class="card-img-top" src="<%= content.thumbnail %>" alt="Card image cap">
                </div>
            </div>
            <div class="col-md-8">
            <h1 class="display-4"><%= content.title %></h1>
            <hr>
            <p><%= content.description %></p>
            <hr>
            <h2 class="display-4">Where Can I Watch <%= content.title %>?</h2>
            <% content.sources.forEach(function(source){ %>
                <% if(source.name === 'Netflix'){ %>
                    <button class="btn btn-danger" onclick="window.location.href='<%= source.link %>';"><img height=35 width=35 src="/icons/netflix.svg"> <%= source.name %></button>
                <% } else { %>
                    <a href="<%= source.link %>"><%= source.name %></p>
                <% } %>
            <% }) %>
            </div>
        </div>
    </main>
  </div>
</div>
