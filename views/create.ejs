<%- include('partials/header'); %>
    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Create a Video Source</h1>
      </div>
      <form action="/create" method="POST">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="title">Title (required)</label>
                <input type="text" class="form-control" id="title" placeholder="Video Title" name="title">
            </div>
            <div class="form-group col-md-6">
                <label for="thumbnail">Thumbnail (required)</label>
                <input type="text" class="form-control" id="thumbnail" placeholder="Thumbnail Image Source" name="thumbnail">
            </div>
            <div class="form-group col-md-6">
                <label for="category">Category (required)</label>
                <select id="category" class="form-control" name="category">
                  <option selected>Choose...</option>
                  <option value="Movie">Movie</option>
                  <option value="Show">Show</option>
                  <option value="Anime">Anime</option>
                </select>
            </div>
            <div class="form-group col-md-6">
                <label for="sourceName">Source Name (required)</label>
                <select id="sourceName" class="form-control" name="sourceName">
                  <option selected>Choose...</option>
                  <option value="Netflix">Netflix</option>
                  <option value="Hulu">Hulu</option>
                  <option value="Prime">Prime</option>
                  <option value="Apple">Apple</option>
                  <option value="Disney">Disney</option>
                  <option value="Peacock">Peacock</option>
                  <option value="Crunchyroll">Crunchyroll</option>
                </select>
            </div>
            <div class="form-group col-md-6">
                <label for="sourceLink">Source Link (required)</label>
                <input type="text" class="form-control" id="sourceLink" placeholder="Source Link" name="sourceLink">
            </div>
            <div class="form-group col-md-6">
                <label for="password">Password (required)</label>
                <input type="password" class="form-control" id="sourceLink" placeholder="Password" name="password">
            </div>
            <div class="form-group col-md-12">
              <label for="description">Description (required)</label>
              <input type="text" class="form-control" id="sourceLink" placeholder="Description" name="description">
          </div>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </main>
  </div>
</div>
